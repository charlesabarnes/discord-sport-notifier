                <td class="py-3 px-4">
                  <div class="flex items-center">
                    <template x-if="league.leagueLogo">
                      <img :src="league.leagueLogo" class="w-8 h-8 mr-2" alt="League logo" onerror="this.style.display='none'">
                    </template>

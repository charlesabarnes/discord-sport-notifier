            class="max-h-60 overflow-y-auto border border-gray-300 rounded-md"
          >
            <template x-for="team in espnTeams" :key="team.id">
              <div
                class="p-2 hover:bg-gray-100 cursor-pointer flex items-center border-b last:border-b-0"
                :class="selectedTeam?.id === team.id ? 'bg-blue-50 border-blue-300' : ''"
                @click="selectTeam(team)"
              >
                <img :src="team.logo" class="w-8 h-8 mr-2" onerror="this.style.display='none'">
                <div>
                  <div x-text="team.name" class="font-medium"></div>
                  <div x-text="team.shortName" class="text-xs text-gray-500"></div>
                </div>
              </div>
            </template>
          </div>
        </div>

        <!-- Selected Team Display -->
        <div class="mb-4" x-show="selectedTeam">
          <div class="p-3 border border-green-300 rounded-md bg-green-50">
            <div class="flex items-center">
              <img :src="selectedTeam?.logo" class="w-12 h-12 mr-3" onerror="this.style.display='none'">
              <div>
                <div x-text="selectedTeam?.name" class="font-medium"></div>
